<div class="container text-center">
  <div class="col-sm-12">
  
    <h1><%= @post.title %></h1>

     <% if @post.image.file? %> 
      <%= image_tag @post.image.url, :size => '600x550' %>
    <% else %> 
      
      <% end %>

    <br>
    <div class="col-6">    
      <p class="show">
        <%= @post.text %>
       </p>
    </div>
  

    <p><%= @post.all_tags %></p>

    <div class="PostLike">
       

        <div class="votes">
            <% if current_user.liked? @post %> 
              <%= link_to unlike_post_path(@post), method: :get, remote: true, class: 'unlike_post' %> 
            <% else %> 
              <%= link_to like_post_path(@post), method: :get, remote: true, class: 'like_post' %>
            <% end %>
        </div>
    </div>
     
