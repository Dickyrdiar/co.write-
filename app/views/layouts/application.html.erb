<!DOCTYPE html>
<html>
  <head>
    <title>App</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

		<!--google font-->
		<link href="https://fonts.googleapis.com/css?family=Roboto" rel="stylesheet">
  </head>

  <body>

 <nav class="navbar navbar-dark bg-dark navbar-fixed-top " style="background-color: #000d1a">
	<div class="container">
		<div class="navbar-header">
			<button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
			<span class="sr-only">Toggle navigation</span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			<span class="icon-bar"></span>
			</button>
			<%= link_to 'Co-Write', root_path, :class => 'navbar-brand' %>
		</div>

		<ul class="nav navbar-nav navbar-left">
				<li>
					<%= form_tag posts_path, :method => :get, class: 'navbar-form navbar-right' do %>
  						<div class="form-group">
   							 <%= text_field_tag :search, params[:search], class: 'form-control mr-sm-2', placeholder: 'find something' %>
   							 <%= submit_tag "Search", :name => nil, class: 'btn btn-outline-primary my-2 my-sm-0' %>
  						</div>
					<% end %>
				</li>
		</ul>

			<ul class="nav navbar-nav navbar-right">
				<% if user_signed_in? %>
					<li><%= link_to'Home', posts_path %></li>
        			<li><%= link_to 'New Post', new_post_path %></li> 	
      				<li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
							<li><%= link_to current_user.username, current_user  %></li>
						<li class="round-image-50"><%= image_tag(current_user.avatar.url(:thumb)) %></li>
    			<% else %>
        			<li><%= link_to "Sign up", new_user_registration_path  %></li> 
        			<li><%= link_to "Login", new_user_session_path  %></li>
    			<% end %>
			</ul>
		</div><!--/.nav-collapse -->
	</div><!--/.container-fluid -->
</nav>
    <%= yield %>
  </body>
</html>
